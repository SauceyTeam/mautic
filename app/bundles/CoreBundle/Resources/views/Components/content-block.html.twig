<div class="mt-64 {% if hasBorder is defined and hasBorder %}mb-64{% else %}mb-160{% endif %}">
    {% if heading is defined %}
    <div class="content-item__header type-fluid-heading-05 mb-32">{{ heading|trans }}</div>
    {% endif %}
    
    {% if subheading is defined %}
    <div class="content-item__subheading type-heading-03 mb-32">{{ subheading|trans }}</div>
    {% endif %}
    
    {% if copy is defined %}
        {% if copy is iterable %}
            {% for item in copy %}
                <div class="content-item__copy type-body-01 mb-lg">{{ item|trans }}</div>
            {% endfor %}
        {% else %}
            <div class="content-item__copy type-body-01 mb-lg">{{ copy|trans }}</div>
        {% endif %}
    {% endif %}
    
    {% if childContainer is defined %}
        {{ childContainer }}
    {% endif %}
    
    <div class="mt-32">
        {% if cta is defined and cta %}
        {% set cta = cta|merge({
            'variant': 'link',
            'icon': 'ri-arrow-right-line'
        }) %}
        {% include '@MauticCore/Helper/button.html.twig' with {buttons: [cta]} %}
        {% endif %}
    </div>
    
    {% if hasBorder is defined and hasBorder %}
    <hr class="mt-64">
    {% endif %}
</div>