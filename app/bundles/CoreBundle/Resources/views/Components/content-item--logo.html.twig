<div class="col-sm-6 col-xs-12 mb-32 mt-32">
    <img src="{{ asset(logo.path) }}" alt="{{ logo.alt|trans }}" title="{{ logo.alt|trans }}" class="mb-32" style="height: 30px; width: fit-content;">
    <div class="content-item__header fw-b type-heading-02 mb-xs mt-xs">{{ heading|trans }}</div>
    <div class="content-item__copy type-body-compact-02 mb-md">{{ copy|trans }}</div>

    {% if cta is defined and cta %}
        {% set cta = cta|merge({
            'variant': 'link',
            'icon': 'ri-arrow-right-line',
            'href': cta.link
        }) %}
        {% include '@MauticCore/Helper/button.html.twig' with {buttons: [cta]} %}
    {% endif %}
</div>
