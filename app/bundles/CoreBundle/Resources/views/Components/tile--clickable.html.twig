{% if tiles is defined %}
{% for tile in tiles %}
    {% set randomId = random() %}
    <a class="tile tile--clickable" id="clickable-tile-{{ randomId }}" href="{{ tile.link|default('#') }}">
        <div>
            <div class="tile-content">
                {{ tile.content|raw }}
            </div>
            <div class="tile-icon">
                <i class="{{ tile.icon|default('ri-arrow-right-line') }}" aria-hidden="true"></i>
            </div>
        </div>
    </a>
{% endfor %}
{% endif %}